<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="hdpi_login_textfield_style">
        <item name="android:textColor">@color/color_username</item>
        <item name="android:textColorHint">@color/color_password</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:background">@drawable/login_textbox_selector</item>
    </style>

    <style name="hdpi_assign_task_label_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>
